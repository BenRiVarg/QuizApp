  <div class="row justify-content-center mt-5 pt-5">
    <header class="text-center mb-5">
      <h1>Crea un nuevo examen</h1>
    </header>
  </div>

  <form action="/editores/crear" id="formularioQuizz" method="POST" enctype="multipart/form-data" class="text-center">
    <div class="row justify-content-center mt-5 pt-5">
      <div class="col-lg-7">
        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="nivel" required>
          <option selected>Nivel</option>
          <option value="Primaria">Primaria</option>
          <option value="Secundaria">Secundaria</option>
          <option value="Preparatoria">Preparatoria</option>
        </select>
      </div>
      <div class="col-lg-7">
        <select id="color" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"
          name="claveMateria" required>
          <option selected>Materia</option>
          <% materia.forEach (function (materia){ %>
            <option value="<%= materia._id %>">
              <%= materia.nombre %>
            </option>

            <% }); %>
        </select>
      </div>
      <div class="col-lg-7">
        <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="grado" required>
          <option selected>Grado</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
        </select>
      </div>
    </div>
    <br>
    <br>
    <div class="text-center">
      <p class="display-6">Nombre del Quizz:</p>

      <input type="text" name="nombreQuizz">
    </div>
    <!-- Inserto de nuevas preguntas-->

    <div class="row justify-content-center mt-5 pt-5" id="insercion">

    </div>
    <!-- Comienza Pregunta Drag  -->
    <div class="tipoAr cuestionario">
    <div class="row mt-3">
      <h1 class="text-center mt-5">Crear exámen Drag</h1>
      <div class="col-lg-12 sm-12 text-center">
        <div class="row">
          <div class="col-lg-6 centrado">
            <div class="mt-5">
              <h4 class="text-center mb-4">Busca la imagen que quieras agregar:</h4>
              <input id="file" type="file" id="file-upload" class="form-control" accept="image/*">
              <div class="mt-3">
                <h4 class="text-dark mb-3">Coloca la cantidad de recuadros:</h4>
                <div class="mb-3">
                  <input id="caRe" type="number" name="cuadro" placeholder="Cantidad:" class="form-control">
                </div>
                <button type="button" class="btn btn-primary fw-bold" onclick="cuadros()">Crear</button>
              </div>
              <h4 class="text-dark mb-3 mt-3">Escribe las palabras que quieras agregar:</h4>
              <div class="mb-3">
                <input id="palabra" type="text" name="palabra" placeholder="Coloca las palabras:" class="form-control">
              </div>
              <button type="button" class="btn btn-primary fw-bold" onclick="palabras()">Crear</button>
              <div class="mt-2">
                <h4 class="text-dark mb-3">Coloca la cantidad de flechas:</h4>
                <div class="mb-3">
                  <input id="caFle" type="number" name="flechas" placeholder="Cantidad:" class="form-control">
                </div>
                <h4 class="text-dark mb-3">Tipos de flecha:</h4>
                <button type="button" class="btn btn-primary fw-bold mb-3" onclick="flechaHoDerecha()"><i
                    class="fas fa-arrow-right fa-lg"></i></button>
                <button type="button" class="btn btn-primary fw-bold mb-3" onclick="flechaHoIzquierda()"><i
                    class="fas fa-arrow-left fa-lg"></i></button>
                <button type="button" class="btn btn-primary fw-bold mb-3" onclick="flechaDiaDerecha()"><i
                    class="fas fa-location-arrow fa-lg"></i></button>
              </div>
              <button type="button" class="btn btn-primary fw-bold mb-3" onclick="flechaDiaIzquierda()"><i
                  class="fas fa-location-arrow fa-rotate-270 fa-lg"></i></button>
              <button type="button" class="btn btn-primary fw-bold mb-3" onclick="flechaDiaDerechaInv()"><i
                  class="fas fa-location-arrow fa-rotate-90 fa-lg"></i></button>
              <button type="button" class="btn btn-primary fw-bold mb-3" onclick="flechaDiaIzquierdaInv()"><i
                  class="fas fa-location-arrow fa-rotate-180 fa-lg"></i></button>
            </div>
            <!-- imagen -->
            <div class="visualizacion container">
              <hr>
              <div id="titulop"></div>
              <div id="preview"></div>
              <!-- palabras -->
              <div id="palabras" class="contenedor mt-5"></div>
              <div id="cuadros" class="row text-center"></div>

              <div id="flechasHoDer" class="text-center">
              </div>
              <div id="flechasHoIz" class="text-center">
              </div>
              <div id="flechasDiaDer" class="text-center">
              </div>
              <div id="flechasDiaIz" class="text-center">
              </div>
              <div id="flechasDiaDerInv" class="text-center">
              </div>
              <div id="flechasDiaIzInv" class="text-center">
              </div>
              <div id="displayNone" class="mt-2 mb-3">
                <h4 id="tituloR" class="text-dark"></h4>
                <div id="demo" type="hidden" class="respuestaDrag text-dark">
                </div>
                <div id="demo2" type="hidden" class="respuestaDrag text-dark">
                </div>
                <div id="demo3" type="hidden" class="respuestaDrag text-dark">
                </div>
                <div id="demo4" type="hidden" class="respuestaDrag text-dark">
                </div>
                <div id="demo5" type="hidden" class="respuestaDrag text-dark">
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6 lienzo shadow mt-5 mb-5" id="lienzo0">
            <div class="col-12">
             
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
    <!--Termina Pregunta Drag-->
  </form>
