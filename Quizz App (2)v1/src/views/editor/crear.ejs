.container1, .button1, .nav1{

position: absolute;
align-items: baseline;
}

.container1{
margin: auto;
top: 10%;
left: 50%;
}

#toggle{
display: none;
}
.button1{
z-index: 999;
width: 43px;
height: 43px;
background-color:blue;
border-radius: 100%;
transition: all o.5s ease-in-out;
box-shadow: (0,0,0,0.3);
cursor: pointer;
position: fixed;
bottom: 360px;
right: 40px;
}

.button1::before{
position: absolute;
top: 20px;
left: 9px;
content: '';
width: 25px;
height: 2px;
background: #fff;
transform: rotate(90deg);
}
.button1::after{
position: absolute;
top: 20px;
left: 9px;
content: '';
width: 25px;
height: 2px;
background: #fff;

}

.nav1 {
transform: translateY(-10%);
opacity: 0;
transition: all 0.5s ease-in-out;
background: white;
width: 150px;
border-radius: 5px;
transform: translateY(0%);
box-shadow: 2px 3px 10px 0 rgba(0, 0, 0, 0.1);
position: fixed;
bottom: 160px;
right: 80px;
}

.nav1 a{
text-align: center;
display: block;
margin: 20px 0;
color: black;
text-decoration: none;
font-family: sans-serif;
text-transform: uppercase;

}

#toggle:checked ~.nav1{
opacity: 1;
transform: translateY(10%);

}
#toggle:checked ~.button1{
transform: rotate(135deg);
box-shadow: (0,0,0, transparent);
}
    </style>
