            <option value="<%= materia._id %>">
              <%= materia.nombre %>
            </option>

            <% }); %>
        </select>
      </div>
      <div class="col-lg-7">
        <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="grado" required>
