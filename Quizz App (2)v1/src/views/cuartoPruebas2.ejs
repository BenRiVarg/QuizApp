          <style>
            * {
                font-family: Arial;
            }
            .move {
                
                position: relative;
                display:inline-block;
                border:2px solid blue;
                border-radius:  50%;
                padding: 10px 30px;
                overflow: hidden;
                text-decoration: none;
                width:50px;
                
            }
            .move:link, .move:visited {
                color: blue;
            }
            .move:hover {
                color: white;
            }
            .move:after {
                content: " ";
                position:absolute;
                background-color: blue;
                transition: all 0.15s;
                z-index: -1;
            }
         
            .moveRight {
                text-align: right;
            }
            .moveRight:after {
                top:0;
                left:0;
                height:100%;
                width:0;
            }
            .moveRight:before {
                content:'';
                position:absolute;
                right:10px;
                font-size: 24px;
                top:4px;
            }
            .moveRight:hover:after {
                transition: all 0.15s;
                width:100%;
            }
            .moveLeft:after {
                top:0;
                left:100%;
                height:100%;
                width:100%;
            }
            .moveLeft:before {
                content:'';
                position:absolute;
                left:10px;
                font-size: 24px;
                top:4px;
            }
            .moveLeft:hover:after {
                transition: all 0.15s;
                left:0;
            }
            </style>
